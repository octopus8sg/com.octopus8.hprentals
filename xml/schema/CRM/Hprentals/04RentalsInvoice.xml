<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
    <base>CRM/Hprentals</base>
    <class>RentalsInvoice</class>
    <name>civicrm_o8_rental_invoice</name>
    <comment>FIXME</comment>
    <log>true</log>
    <paths>
        <add>civicrm/rentals/invoice</add>
        <update>civicrm/rentals/invoice#?RentalsInvoice=[id]</update>
    </paths>

    <field>
        <name>id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>Unique RentalsInvoice ID</comment>
        <html>
            <type>Number</type>
        </html>
    </field>
    <primaryKey>
        <name>id</name>
        <autoincrement>true</autoincrement>
    </primaryKey>

    <field>
        <name>code</name>
        <type>varchar</type>
        <length>12</length>
        <label>Code</label>
        <comment>Code</comment>
        <required>true</required>
        <import>true</import>
        <export>true</export>
        <html>
            <type>Text</type>
            <label>Code</label>
        </html>
    </field>
    <index>
        <name>index_code</name>
        <fieldName>code</fieldName>
        <unique>true</unique>
    </index>

    <field>
        <name>description</name>
        <type>varchar</type>
        <length>1255</length>
        <label>Description</label>
        <comment>Name</comment>
        <required>true</required>
        <import>true</import>
        <export>true</export>
        <html>
            <type>Text</type>
            <label>Description</label>
        </html>
    </field>

    <field>
        <name>rental_id</name>
        <type>int unsigned</type>
        <comment>FK to RentalsRental</comment>
        <title>Rental</title>
        <comment>FK to Rentals</comment>
        <pseudoconstant>
            <table>civicrm_o8_rental_rental</table>
            <keyColumn>id</keyColumn>
            <nameColumn>admission</nameColumn>
        </pseudoconstant>
        <html>
            <type>Select</type>
        </html>
    </field>
    <foreignKey>
        <name>rental_id</name>
        <table>civicrm_o8_rental_rental</table>
        <key>id</key>
        <onDelete>SET NULL</onDelete>
    </foreignKey>

    <field>
        <name>amount</name>
        <type>decimal</type>
        <required>true</required>
        <import>true</import>
        <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
        <comment>Amount</comment>
        <html>
            <type>Text</type>
            <label>Amount</label>
        </html>
    </field>

    <field>
        <name>created_id</name>
        <type>int unsigned</type>
        <title>Created By Contact ID</title>
        <comment>FK to civicrm_contact, who created this</comment>
        <readonly>TRUE</readonly>
        <html>
            <label>Created By</label>
            <type>EntityRef</type>
        </html>
    </field>
    <foreignKey>
        <name>created_id</name>
        <table>civicrm_contact</table>
        <key>id</key>
        <onDelete>SET NULL</onDelete>
    </foreignKey>
    <field>
        <name>created_date</name>
        <type>datetime</type>
        <title>Created Date</title>
        <comment>Date and time this was created.</comment>
        <readonly>TRUE</readonly>
        <html>
            <label>Created Date</label>
            <type>Select Date</type>
        </html>
    </field>
    <field>
        <name>modified_id</name>
        <type>int unsigned</type>
        <title>Modified By Contact ID</title>
        <comment>FK to civicrm_contact, who modified this</comment>
        <readonly>TRUE</readonly>
        <html>
            <label>Modified By</label>
            <type>EntityRef</type>
        </html>
    </field>
    <foreignKey>
        <name>modified_id</name>
        <table>civicrm_contact</table>
        <key>id</key>
        <onDelete>SET NULL</onDelete>
    </foreignKey>
    <field>
        <name>modified_date</name>
        <type>datetime</type>
        <title>Modified Date</title>
        <comment>Date and time this was modified.</comment>
        <readonly>TRUE</readonly>
        <html>
            <label>Modified Date</label>
            <type>Select Date</type>
        </html>
    </field>

</table>
